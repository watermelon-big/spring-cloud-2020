<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.atguigu.springcloud.alibaba.dao.OrderDao">

    <resultMap id="BaseResultMap" type="com.atguigu.springcloud.alibaba.domain.Order">
        <id column="id" property="id" javaType="BIGINT"></id>
        <result column="user_id" property="userId" javaType="BIGINT"></result>
        <result column="product_id" property="productId" javaType="BIGINT"></result>
        <result column="count" property="count" javaType="INTEGER"></result>
        <result column="money" property="money" javaType="DECIMAL"></result>
        <result column="status" property="status" javaType="INTEGER"></result>
    </resultMap>

    <insert id="create">
        insert into t_order(id,user_id,product_id,count,money,status)
        values(null,#{user_id},#{product_id},#{count},#{money},0);
    </insert>

    <update id="update">
        update t_order set status = 1 where user_id=#{userId} and status=#{status}
    </update>

</mapper>